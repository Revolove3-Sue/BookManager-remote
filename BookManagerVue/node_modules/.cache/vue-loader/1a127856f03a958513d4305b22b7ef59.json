m prop=\"password\">\n        <span class=\"svg-container\">\n          <i class=\"el-icon-lock\" style=\"font-size: 24px\"></i>\n        </span>\n        <el-input\n          class=\"yuan\"\n          v-model=\"loginForm.password\"\n          placeholder=\"请输入密码\"\n          name=\"password\"\n          type=\"password\"\n          tabindex=\"2\"\n          autocomplete=\"off\"\n        />\n      </el-form-item>\n\n      <!-- 验证码 -->\n      <el-form-item prop=\"captcha\">\n        <div class=\"captcha-container\">\n          <el-input\n            class=\"captcha-input\"\n            v-model=\"loginForm.captcha\"\n            placeholder=\"请输入验证码\"\n            name=\"captcha\"\n            type=\"text\"\n            tabindex=\"3\"\n          />\n          <img\n            :src=\"captchaSrc\"\n            alt=\"验证码\"\n            class=\"captcha-img\"\n            @click=\"refreshCaptcha\"\n          />\n          <button type=\"button\" class=\"refresh-btn\" @click=\"refreshCaptcha\">刷新验证码</button>\n        </div>\n      </el-form-item>\n\n      <!-- 登录按钮 -->\n      <el-form-item>\n        <el-button\n          type=\"primary\"\n          class=\"login-button\"\n          @click=\"handleLogin\"\n          :loading=\"loading\"\n        >\n          登录\n        </el-button>\n      </el-form-item>\n    </el-form>\n  </div>\n</template>\n\n<script>\nexport default {\n  data() {\n    return {\n      loginForm: {\n        username: \"\",\n        password: \"\",\n        captcha: \"\",\n      },\n      loginRules: {\n        username: [{ required: true, message: \"请输入用户名\", trigger: \"blur\" }],\n        password: [{ required: true, message: \"请输入密码\", trigger: \"blur\" }],\n        captcha: [{ required: true, message: \"请输入验证码\", trigger: \"blur\" }],\n      },\n      captchaSrc: \"/captcha\", // 验证码路径\n      loading: false,\n    };\n  },\n  methods: {\n    refreshCaptcha() {\n      this.captchaSrc = `/captcha?${new Date().getTime()}`; // 防止缓存\n    },\n    handleLogin